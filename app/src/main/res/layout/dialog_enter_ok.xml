<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_radius_dialog"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/ibClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_bg_gray"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/img_dialog_close" />

        <TextView
            android:id="@+id/tvHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableTop="@mipmap/icon_dialog_success"
            android:drawablePadding="@dimen/dp_20"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_30"
            android:paddingRight="@dimen/dp_10"
            android:text="您的案件已提交，我们会尽快处理！"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvEnter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_30"
        android:background="@drawable/selector_dialog_button_blue"
        android:elevation="@dimen/dp_2"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_25"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_25"
        android:paddingBottom="@dimen/dp_5"
        android:text="知道啦"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

</LinearLayout>