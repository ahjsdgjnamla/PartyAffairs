<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">

        <ImageView
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:src="@mipmap/page_item_icon"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="树一面旗帜，富一方百姓"
                android:textSize="@dimen/sp_15"
                android:textColor="#4D4D4D"
                android:id="@+id/page_item_title"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-08-16"
                android:textSize="@dimen/sp_15"
                android:textColor="#999999"
                android:layout_marginTop="@dimen/dp_9"
                android:id="@+id/page_item_time"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_7">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/liulan"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234"
                android:textColor="#B3B3B3"
                android:textSize="@dimen/sp_10"
                android:layout_marginLeft="@dimen/dp_8"
                android:id="@+id/page_item_num"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150"
        android:src="@mipmap/item_1"
        android:scaleType="fitXY"
        android:id="@+id/page_item_photo"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="时刻记得发挥空间撒打发你空间撒地方呢"
        android:textColor="#808080"
        android:textSize="@dimen/sp_12"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/dp_10"
        android:id="@+id/page_item_center"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_5"
        android:background="#f5f5f5"/>

</LinearLayout>