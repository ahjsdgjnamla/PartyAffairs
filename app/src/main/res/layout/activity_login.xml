<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/login_background"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_logo"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_title"
            android:paddingTop="@dimen/dp_7"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_engs"
            android:paddingTop="@dimen/dp_15"/>

        <EditText
            android:id="@+id/etUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:hint="请输入党员代码"
            android:inputType="text"
            android:padding="@dimen/dp_10"
            android:textColorHint="@color/Light_Yellow"
            android:textColor="@color/Light_Yellow"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:background="@drawable/bg_edittext_white"/>

        <EditText
            android:id="@+id/etPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:padding="@dimen/dp_10"
            android:textColorHint="@color/Light_Yellow"
            android:textColor="@color/Light_Yellow"
            android:textSize="@dimen/sp_15"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:background="@drawable/bg_edittext_white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_17"
            android:paddingTop="@dimen/dp_35">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/login_button_back"
                android:text="群众登录"
                android:textColor="#820707"
                android:textSize="@dimen/sp_15"
                style="@style/TextViewCustomFont"
                android:textStyle="bold"
                android:id="@+id/masses_id"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_weight="1"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/login_button_back"
                android:text="党员登录"
                android:textColor="#820707"
                android:textSize="@dimen/sp_15"
                style="@style/TextViewCustomFont"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/dp_5"
                android:id="@+id/member_id"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>