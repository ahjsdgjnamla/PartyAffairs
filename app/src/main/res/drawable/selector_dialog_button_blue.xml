<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" android:useLevel="false">
            <corners android:radius="7dp" />
            <gradient android:angle="90" android:endColor="#6d9cdf" android:startColor="#2e76e7" />
        </shape>

    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" android:useLevel="false">
            <gradient android:angle="90" android:endColor="#7CB2FF" android:startColor="#3282FF" />
            <corners android:radius="7dp" />
        </shape>
    </item>
</selector>
